{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["jest", "@testing-library/jest-dom"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
